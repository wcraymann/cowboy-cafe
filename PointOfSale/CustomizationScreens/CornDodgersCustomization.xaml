<!---
    Author: William Raymann.
    Class: CornDodgersCustomization.xaml
    Purpose: List the customization options for the Corn
             Dodgers order item and to allow the user to change
             the Corn Dodgers order item.
    -->
    
<UserControl x:Class="PointOfSale.CustomizationScreens.CornDodgersCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" FontSize="20" Background="LightPink">Corn Dodgers Options</TextBlock>


        <StackPanel Grid.Column="0" Grid.Row="1" Width="200" HorizontalAlignment="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Size:" Grid.Row="0" Background="LightGreen"/>
                <RadioButton Content="Large" GroupName="CornDodgersSize" Grid.Row="1" Click="CornDodgersSizeSelect"/>
                <RadioButton Content="Medium" GroupName="CornDodgersSize" Grid.Row="2" Click="CornDodgersSizeSelect"/>
                <RadioButton Content="Small" GroupName="CornDodgersSize" Grid.Row="3" Click="CornDodgersSizeSelect"/>

            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
