<!---
    Author: William Raymann.
    Class: RustlersRibsCustomization.xaml
    Purpose: List the customization options for the Rustlers
             Ribs order item and to allow the user to change
             the Rustlers Ribs order item.
    -->
    
<UserControl x:Class="PointOfSale.CustomizationScreens.RustlersRibsCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" FontSize="20" Background="LightPink">Rustler's Ribs Options</TextBlock>


        <StackPanel Grid.ColumnSpan="2" Grid.Row="1">
            <TextBlock Text="There are no customization options for the Rustler's Ribs Item."/>

        </StackPanel>

    </Grid>
</UserControl>
